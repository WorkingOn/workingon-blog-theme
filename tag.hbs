{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="main-header tag-head no-cover">
    <nav class="main-nav overlay clearfix">
        <a class="wo-type-logo" href="{{@blog.url}}"><strong>{{@blog.title}}</strong><br/><span>{{@blog.description}}</span></a>
            <a class="subscribe-button" href="https://www.workingon.co/get-started">Get Started</a>
    </nav>
    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title">{{tag.name}}</h1>
            <h2 class="page-description">A {{pagination.total}}-post collection</h2>
        </div>
    </div>
</header>

{{! The main content area on the homepage }}
<main class="content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>